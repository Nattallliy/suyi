/* ДЛЯ ВСЕГО САЙТА*/

body{
	position: relative;
	font-family: 'Noto Sans', sans-serif;
	font-size: 16px;
	line-height: 1.4;
	color: #000;
	min-width: 320px;
	overflow-x: hidden;
	height: 700vh;
}

/* ДЛЯ ГЛАВНОЙ*/

.header { 
	position: relative;
	min-height: 700px;
	background-size: cover;
	background-repeat: no-repeat;
	background-attachment: fixed;
}

.overlay {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, .6);
}

.header .row {
	min-height: 700px;
	display: flex;
	align-items: center;
}

.header-content {
	text-align: center;
	position: relative;
	z-index: 2;
	color: #fff;
}

.header-content h1 {
	text-align: center;
	font-size: 36px;
	font-weight: 700;
	margin-bottom: 10px;
	
}

.header-content h4 {
	font-size: 21px;
	font-weight: 400;
	margin-bottom: 10px;
	opacity: 0.7;
	
}

